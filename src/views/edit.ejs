<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update a user</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%= JSON.stringify(userEdit)%>
    <div class="topnav">
        <a  href="/">Home</a>
        <a href="/create">Update Users</a>
    </div>

    <div class="form-add-new">
        <form action="/create-user" method="post">
            <fieldset>
                <legend>Update a users</legend>
                <div class="input-group">
                    <label for="">Email</label>
                    <input type="text" name="emailID" id="" value="<%= userEdit.email%>">
                </div>
                <div class="input-group">
                    <label for="">Name</label>
                    <input type="text" name="Name" id="" value="<%= userEdit.name%>">
                </div>
                <div class="input-group">
                    <label for="">City</label>
                    <input type="text" name="city" id="" value="<%= userEdit.city%>">
                </div>
                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>
</html>