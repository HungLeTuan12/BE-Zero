<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>
    <!--  Style inline -->
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #ccc;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {background-color: violet;}
        .table-container {
            padding: 15px 20px;
        }
        .list-user {
            font-size: 30px;
            font-weight: 600;
            text-align: center;
            padding-bottom: 10px;
        }
    </style>
    <div class="table-container">
        <div class="list-user">
            List Users
        </div>
        <table>
            <tr>
                <th>ID</th>
                <th>EMAIL</th>
                <th>NAME</th>
                <th>CITY</th>
                <th>ACTIONS</th>
            </tr>
            <% listUsers.forEach(function(user) { %>
                <tr>
                    <td><%=user.id%></td>
                    <td><%=user.email%></td>
                    <td><%=user.name%></td>
                    <td><%=user.city%></td>
                    <td>
                        <button>Edit</button>
                        <button>Delete</button>
                    </td>
                </tr>
             <% }); %> 
        </table>
    </div>
    
